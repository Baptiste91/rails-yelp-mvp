<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h1><%= @restaurant.name %></h1>

      <ul>
        <li>Address: <strong><%= @restaurant.address %></strong></li>
        <li>Categroy: <strong><%= @restaurant.category %></strong></li>
        <li>Phone number: <strong><%= @restaurant.phone_number %></strong></li>
      </ul>

      <h4>Reviews</h4>
      <ul class="list-group">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item"><%= review.content %> (<%= review.rating %>)</li>
        <% end %>
      </ul>

      <%= link_to 'Back', restaurants_path, class: 'btn btn-primary mt-3' %>
      <br>
      <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary mt-3' %>

    </div>
  </div>
</div>
