<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h1>Add a new review for <%= @restaurant.name%> </h1>

        <%= simple_form_for [ @restaurant, @review ] do |f| %>
          <%= f.input :content %>
          <%= f.number_field :rating, placeholder: 'rating up to 5', class: 'mt-3'%>
          <br>
          <%= f.submit "Submit review", class: 'btn btn-outline-primary mt-3' %>
        <% end %>

        <%= link_to "Back to #{@restaurant.name} details", restaurant_path(@restaurant), class: 'btn btn-outline-primary mt-3' %>
    </div>
  </div>
</div>
